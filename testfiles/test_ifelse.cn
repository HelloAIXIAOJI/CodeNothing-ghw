fn main() : int {
    // 测试简单的if语句
    a : int = 10;
    result : string = "";
    
    if (a > 5) {
        result = "a大于5";
    } else {
        result = "a不大于5";
    };
    
    // 测试if-else if-else语句
    b : bool = true;
    bb : string = "";
    
    if (b == true) {
        bb = "true";
    } else if (b == false) {
        bb = "false";
    } else {
        bb = "unknown";
    };
    
    // 测试复杂条件
    c : int = 15;
    cc : string = "";
    
    // 使用if-else语句赋值
    if (c > 20) {
        cc = "c大于20";
    } else if (c > 10) {
        cc = "c大于10";
    } else {
        cc = "c小于等于10";
    };
    
    // 单独测试字符串赋值
    test_str : string = "c大于10";
    
    // 返回测试结果的各个条件
    r1 : int = 0;
    r2 : int = 0;
    r3 : int = 0;
    r4 : int = 0;
    
    if (result == "a大于5") {
        r1 = 1;
    };
    
    if (bb == "true") {
        r2 = 1;
    };
    
    // 检查cc的值
    if (cc == "c大于10") {
        r3 = 1;
    };
    
    // 检查test_str的值
    if (test_str == "c大于10") {
        r4 = 1;
    };
    
    // 返回测试结果
    return r1 + r2 * 10 + r3 * 100 + r4 * 1000;
}; 