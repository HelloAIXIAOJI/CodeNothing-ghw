fn main() : int {
    // 这是单行注释
    
    /!
        这是多行注释
        可以跨越多行
        不会被解释器执行
    !/
    
    num : int = 10;  // 变量定义
    
    /! 这也是多行注释，虽然只有一行 !/
    
    // 嵌套测试
    /!
        外层注释
        /!
            内层注释 - 这部分不应该被特殊处理，因为已经在注释中
        !/
        继续外层注释
    !/
    
    // 测试注释中的代码不会被执行
    /!
        num = 20;  // 这行不会执行
        return 1;  // 这行也不会执行
    !/
    
    return num;  // 应该返回10
}; 