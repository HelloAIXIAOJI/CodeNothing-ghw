// 完整的泛型功能测试

// 测试基本类型推断
fn test_basic_inference() : void {
    // 显式类型声明
    x: int = 42;
    y: float = 3.14;
    z: string = "Hello";
    
    // 自动类型推断
    a: auto = 100;
    b: auto = 2.71;
    c: auto = "World";
    
    // 复杂表达式的类型推断
    d: auto = x + 10;
    e: auto = y * 2.0;
    f: auto = z + " " + c;
};

