fn main() : int {
    // 测试基本函数调用
    sum : int = add(10, 20);
    
    // 测试嵌套函数调用
    nested : int = multiply(add(5, 5), 3);
    
    // 测试不同类型的参数
    message : string = format_message("Hello", 42);
    
    // 测试多参数函数
    complex : int = complex_calc(10, 5, 2);
    
    return complex;
};

// 基本的加法函数
fn add(a : int, b : int) : int {
    return a + b;
};

// 乘法函数
fn multiply(a : int, b : int) : int {
    return a * b;
};

// 格式化消息函数，接受不同类型的参数
fn format_message(text : string, number : int) : string {
    return text + ", the number is " + number;
};

// 复杂计算函数，使用多个参数
fn complex_calc(x : int, y : int, z : int) : int {
    // (x * y) + (x / z) - (y % z)
    part1 : int = multiply(x, y);
    part2 : int = x / z;
    part3 : int = y % z;
    
    return part1 + part2 - part3;
}; 