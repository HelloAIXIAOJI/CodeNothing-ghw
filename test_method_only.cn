// 仅测试方法调用
using lib <io>;
using ns std;

class SimpleClass {
    public value : int;
    
    constructor(val : int) {
        this.value = val;
    };
    
    public fn getValue() : int {
        return this.value;
    };
    
    public fn getConstant() : int {
        return 100;
    };
};

fn main() : int {
    std::println("测试方法调用");
    
    obj : SimpleClass = new SimpleClass(42);
    
    std::println("直接访问字段: " + obj.value);
    
    constant : int = obj.getConstant();
    std::println("常量方法返回: " + constant);
    
    value : int = obj.getValue();
    std::println("getValue方法返回: " + value);
    
    return 0;
};
