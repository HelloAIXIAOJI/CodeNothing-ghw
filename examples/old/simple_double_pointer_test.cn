using lib <io>;
using ns std;

// 简单的二级指针测试

fn main() : int {
    std::println("=== 简单二级指针测试 ===");
    
    // 测试基础变量
    value : int = 42;
    std::println("值: " + value);
    
    // 测试一级指针
    ptr : *int = &value;
    std::println("一级指针: " + ptr);
    
    // 测试二级指针
    ptrPtr : **int = &ptr;
    std::println("二级指针: " + ptrPtr);

    // 测试解引用
    derefPtr : *int = *ptrPtr;
    std::println("解引用二级指针: " + derefPtr);

    derefValue : int = *(*ptrPtr);
    std::println("二次解引用: " + derefValue);

    return 0;
};
