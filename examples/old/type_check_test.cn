using lib <io>;
using ns std;

// CodeNothing 类型检查测试

fn main() : int {
    std::println("=== CodeNothing 类型检查测试 ===");
    
    // 正确的类型声明
    x : int = 42;
    y : float = 3.14;
    name : string = "Hello";
    flag : bool = true;
    
    std::println("正确的类型声明:");
    std::println("x = " + x);
    std::println("y = " + y);
    std::println("name = " + name);
    std::println("flag = " + flag);
    
    // 测试函数调用
    result : int = add(x, 10);
    std::println("add(x, 10) = " + result);
    
    // 测试字符串方法调用
    length : int = name.length();
    std::println("name.length() = " + length);
    
    return 0;
};

fn add(a : int, b : int) : int {
    return a + b;
};

fn multiply(a : float, b : float) : float {
    return a * b;
};

fn greet(name : string) : string {
    return "Hello, " + name + "!";
};
