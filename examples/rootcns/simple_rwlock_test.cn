using lib <io>;
using ns std;

fn main() : int {
    std::println("🚀 v0.6.2 简单读写锁测试");

    // 基本变量分配（写操作）
    a : int = 100;
    b : string = "test";
    c : bool = true;

    std::println("✅ 变量分配完成");

    // 基本读取操作
    if (a > 0) {
        std::println("a的值大于0");
    };

    std::println("b的值:", b);

    if (c) {
        std::println("c为真");
    };

    std::println("✅ 读取操作完成");
    std::println("🎉 简单测试完成！");

    return 0;
};
