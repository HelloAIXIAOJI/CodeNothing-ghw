// CodeNothing v0.7.7 循环JIT编译优化测试
using lib <io>;

fn test_while_loop_jit(): int {
    print("🔄 测试While循环JIT编译");

    i : int = 0;
    sum : int = 0;
    
    while (i < 100) {
        sum = sum + i;
        i = i + 1;
    };
    
    print("While循环结果: " + sum);
    return sum;
};

fn test_for_loop_jit(): int {
    print("🔄 测试For循环JIT编译");

    sum : int = 0;

    for (i : 1..100) {
        sum = sum + i * i;
    };

    print("For循环结果: " + sum);
    return sum;
};

fn test_nested_loop_jit(): int {
    print("🔄 测试嵌套循环JIT编译");

    total : int = 0;

    for (i : 1..10) {
        for (j : 1..10) {
            total = total + i * j;
        };
    };

    print("嵌套循环结果: " + total);
    return total;
};

fn main(): int {
    print("=== CodeNothing v0.7.7 循环JIT编译优化测试 ===");
    print("");
    
    result1 : int = test_while_loop_jit();
    result2 : int = test_for_loop_jit();
    result3 : int = test_nested_loop_jit();
    
    total : int = result1 + result2 + result3;
    
    print("");
    print("=== 测试完成 ===");
    print("总计结果: " + total);
    print("🎉 循环JIT编译测试完成！");
    
    return total;
};


