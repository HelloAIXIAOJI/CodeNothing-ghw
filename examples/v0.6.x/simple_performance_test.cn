// 🚀 v0.6.3 简化性能测试 - 专注测试简单类型快速路径
using lib <io>;
using ns std;

fn main() : int {
    std::println("🚀 v0.6.3 简化性能测试开始");
    
    // 测试: 大量简单类型变量分配和计算
    std::println("测试: 大量简单类型变量分配和计算");
    
    i : int = 0;
    total : int = 0;
    
    while (i < 100000) {
        // 大量简单类型分配（应该使用快速路径）
        a : int = i;
        b : int = i * 2;
        c : int = a + b;
        d : int = c * 3;
        e : int = d - i;
        
        // 浮点数计算
        f : float = 3.14;
        g : float = 2.71;
        
        // 布尔值
        h : bool = (i % 2 == 0);
        
        // 长整型
        j : long = 1000000;
        
        total = total + e;
        i = i + 1;
    };
    
    std::println("✅ 完成100,000次简单类型操作");
    std::println("总和:", total);
    
    std::println("🎉 简化性能测试完成！");
    
    return 0;
};
