using lib <io>;
using ns std;

// 测试数组操作
fn main(): int {
    arr : array<int> = [1, 2, 3, 4, 5];

    // 测试数组访问
    std::println("第一个元素: " + arr[0]);
    std::println("第二个元素: " + arr[1]);
    std::println("第三个元素: " + arr[2]);
    std::println("第四个元素: " + arr[3]);
    std::println("第五个元素: " + arr[4]);

    // 测试简单的数组遍历
    i : int = 0;
    while (i < 5) {
        std::println("元素 " + i + ": " + arr[i]);
        i = i + 1;
    };

    return 0;
};
