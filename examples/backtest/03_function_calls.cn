// 03_function_calls.cn - 函数调用语句测试
using lib <io>;
using ns std;

fn main() : int {
    std::println("=== 函数调用语句测试 ===");
    
    // 1. 普通函数调用
    std::println("1. 普通函数调用测试");
    result1 : int = add(10, 20);
    std::println("add(10, 20) = " + result1);
    
    // 2. 命名空间函数调用
    std::println("2. 命名空间函数调用测试");
    std::println("std::println 正常工作");
    
    // 3. 导入后的直接调用
    std::println("3. 导入后的直接调用测试");
    println("直接调用 println");
    
    // 4. 函数调用语句（无返回值）
    std::println("4. 无返回值函数调用测试");
    print_message("Hello from function");
    
    std::println("=== 函数调用语句测试完成 ===");
    return 0;
};

fn add(a : int, b : int) : int {
    return a + b;
};

fn print_message(msg : string) : void {
    std::println("消息: " + msg);
    return;
};
