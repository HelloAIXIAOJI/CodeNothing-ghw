using lib <io>;
using ns std;

// 简单指针测试

fn main() : int {
    std::println("=== 简单指针测试 ===");

    // 测试基础变量
    value : int = 42;
    std::println("值: " + value);

    // 测试取地址操作
    address : *int = &value;
    std::println("地址: " + address);

    // 测试解引用操作
    derefValue : int = *address;
    std::println("解引用值: " + derefValue);

    return 0;
};
