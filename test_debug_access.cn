// 调试访问修饰符问题
using lib <io>;
using ns std;

class AccessTest {
    private secret : int;
    public visible : int;
    
    constructor(value : int) {
        this.secret = value;
        this.visible = value * 3;
    };
    
    public fn getVisible() : int {
        return this.visible;
    };
    
    public fn testInternalAccess() : void {
        std::println("内部访问secret: " + this.secret);
        std::println("内部访问visible: " + this.visible);
    };
};

fn main() : int {
    std::println("调试访问修饰符问题");
    
    test_obj : AccessTest = new AccessTest(42);
    
    std::println("=== 测试内部访问 ===");
    test_obj.testInternalAccess();
    
    std::println("=== 测试外部访问 ===");
    std::println("调用getVisible方法: " + test_obj.getVisible());
    
    // 这里应该会出问题
    std::println("直接访问visible字段: " + test_obj.visible);
    
    return 0;
};
