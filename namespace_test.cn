// 导入IO库
using lib <io>;

// 导入示例库
using lib <example>;

// 导入std命名空间
using ns std;

fn main() : int {
    // 使用std命名空间中的函数（已导入）
    println("测试命名空间功能");
    
    // 直接使用完整命名空间路径
    std::printf("这是通过完整路径调用的printf函数\n");
    
    // 使用示例库中的根命名空间函数
    original : string = "Hello, World!";
    reversed : string = reverse(original);
    println("原始字符串: " + original);
    println("反转后: " + reversed);
    
    // 使用示例库中的string命名空间函数
    length : string = string::length(original);
    upper : string = string::to_upper(original);
    lower : string = string::to_lower(original);
    
    println("字符串长度: " + length);
    println("转换为大写: " + upper);
    println("转换为小写: " + lower);
    
    // 导入string命名空间
    using ns string;
    
    // 现在可以直接使用string命名空间中的函数
    another_length : string = length("Another test string");
    println("另一个字符串的长度: " + another_length);
    
    return 0;
}; 