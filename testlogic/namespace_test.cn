// 命名空间解析器测试
// 测试命名空间定义、using语句等

using lib <io>;
using ns std;

fn main() : int {
    std::println("📦 命名空间解析器测试");
    std::println("======================");
    
    // 测试1: 基础命名空间使用
    std::println("测试1: 基础命名空间使用");
    test_basic_namespace();
    
    // 测试2: 标准库命名空间
    std::println("测试2: 标准库命名空间");
    test_std_namespace();
    
    std::println("✅ 命名空间解析器测试完成");
    return 0;
};

fn test_basic_namespace() : void {
    // 使用std命名空间的println函数
    std::println("  - 使用std::println正常");
    
    // 测试命名空间解析
    std::println("  ✅ 基础命名空间使用正常");
};

fn test_std_namespace() : void {
    // 测试标准库函数调用
    std::println("  - 标准库函数调用正常");
    
    // 测试数学函数（如果可用）
    result : float = abs(-5.5);
    std::println("  - abs(-5.5) = " + result);
    
    std::println("  ✅ 标准库命名空间正常");
};
