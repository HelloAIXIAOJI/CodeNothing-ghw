fn main() : int {
    // 测试多行注释的各种情况
    
    // 1. 基本多行注释
    /!
        这是一个基本的多行注释
        包含多行文本
    !/
    
    // 2. 单行形式的多行注释
    /! 这是单行形式的多行注释 !/
    
    // 3. 嵌套多行注释
    /!
        外层注释开始
        /!
            内层注释
            多行内容
        !/
        外层注释结束
    !/
    
    // 4. 注释中包含代码
    /!
        下面的代码不会被执行:
        num = 100;
        return 999;
    !/
    
    // 5. 注释中包含特殊字符
    /!
        特殊字符测试: !@#$%^&*()_+{}[]|\\:;"'<>,.?/
        包括可能干扰注释解析的字符: / ! /! !/
    !/
    
    // 6. 多行注释后紧跟代码
    /! 多行注释 !/num : int = 10;
    
    // 7. 代码后紧跟多行注释
    num = 20;/! 这是注释，不会影响前面的代码 !/
    
    // 8. 注释中包含空行
    /!
    
        注释中的空行
    
    !/
    
    return num; // 应该返回20
}; 