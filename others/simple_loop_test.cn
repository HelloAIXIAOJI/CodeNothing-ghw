using lib <io>;
using ns std;

// 🚀 简单循环性能测试 - 对比批量内存操作的开销

fn main(): int {
    std::println("🧮 简单循环性能测试开始");

    // 测试1: 最简单的循环 - 无内存操作
    std::println("测试1: 无内存操作循环");
    i : int = 1;
    while (i <= 1) {
        std::println("简单循环: " + i);
        i = i + 1;
    };
    std::println("测试1完成");

    // 测试2: 单个变量分配
    std::println("测试2: 单变量分配");
    j : int = 1;
    while (j <= 1) {
        temp : int = j * 2;  // 单个临时变量
        std::println("变量值: " + temp);
        j = j + 1;
    };
    std::println("测试2完成");

    // 测试3: 嵌套循环 1x1
    std::println("测试3: 1x1嵌套循环");
    outer : int = 1;
    while (outer <= 1) {
        std::println("外层: " + outer);
        inner : int = 1;
        while (inner <= 1) {
            std::println("内层: " + inner);
            result : int = outer * inner;
            std::println("结果: " + result);
            inner = inner + 1;
        };
        outer = outer + 1;
    };
    std::println("测试3完成");

    std::println("🎉 简单循环测试完成！");
    
    return 0;
};
