// 测试修复后的CodeNothing功能
using lib <io>;
using ns std;

// 简单的学生类
class Student {
    public name : string;
    public score : int;
    
    constructor(name : string) {
        this.name = name;
        this.score = 0;
    };
    
    public fn getName() : string {
        return this.name;
    };
    
    public fn getScore() : int {
        return this.score;
    };
    
    public fn addPoints(points : int) : int {
        this.score = this.score + points;
        return this.score;
    };
    
    public fn getInfo() : string {
        return this.name + " has " + this.score + " points";
    };
};

fn main() : int {
    std::println("测试修复后的CodeNothing功能");
    
    // 测试1: 类型系统方法识别
    std::println("=== 测试1: 类方法调用 ===");
    alice : Student = new Student("Alice");
    std::println("学生姓名: " + alice.getName());
    std::println("初始分数: " + alice.getScore());
    
    // 测试2: 方法调用语句解析
    std::println("=== 测试2: 方法调用语句 ===");
    alice.addPoints(50);
    alice.addPoints(30);
    std::println("添加分数后: " + alice.getInfo());
    
    // 测试3: 字符串拼接
    std::println("=== 测试3: 字符串拼接 ===");
    student_name : string = "Bob";
    greeting : string = "Hello " + student_name + "!";
    std::println(greeting);
    
    std::println("所有测试完成！");
    return 0;
};
